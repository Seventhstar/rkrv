<!DOCTYPE html>
<html>
  <head>
    <title>Rkaravai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'favicon.png' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="header" id="header">
        <%= render_navigation(level: 1) %>
      <ul class="header-item tabs" id="utility_nav">
        <li class="menu_item m_icon" title="Настройки" id="options"><a href="/admin"></a></li>
        <li class="menu_item m_icon" title="Загрузка" id="import"><a href="/csv/import_catalog"></a></li>
        <li class="menu_item" id="current_user"><%= current_user.name %></li>
        <li class="menu_item" id="logout"><a rel="nofollow" data-method="delete" href="/users/sign_out">Выйти</a></li>
      </ul>
      </div>
    <% else %> 
      <%= link_to('Login', new_user_session_path) %> 
    <% end -%>

    <%= yield %>
  </body>
</html>
