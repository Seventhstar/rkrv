<!DOCTYPE html>
<html>
  <head>
    <title>Rkaravai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'favicon.png' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div class="header" id="header">
        <%= render_navigation(level: 1) %>
      <ul class="header-item tabs" id="utility_nav">
        <li class="menu_item m_icon" title="Настройки" id="options"><a href="/admin"></a></li>
        <li class="menu_item m_icon" title="Загрузка" id="import"><a href="/csv/import_catalog"></a></li>
        <li class="menu_item" id="current_user"><%= current_user.name %></li>
        <li class="menu_item" id="logout"><a rel="nofollow" data-method="delete" href="/logout">Выйти</a></li>
      </ul>
      </div>
    <% end %>

    <div class="js-notes has-note">
      <% flash.each do |name, msg| %>
        <%= render 'error_msg', name: name, msg: msg %>
      <% end %>
      <% flash.clear %>
    </div>

    <div id="modal-holder" class="slide"></div>
    <%= yield %>

  </body>
</html>
